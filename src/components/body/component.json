{
  "version": "1.0.0",
  "name": "body",
  "description": "Simple body (suptitle, titles, subtutle, lead, (rich)text and buttons) component",
  "files": ["*.php"],
  "subset": {
    "engine": {
      "question": "Which engine do you use?",
      "type": "list",
      "choices": ["twig", "blade"],
      "component": {
        "twig": {
          "files": ["*.twig"]
        },
        "blade": {
          "files": ["*.blade.php"],
          "dependencies": {
            "@lotsof/components/blade": "^1.0.0"
          }
        }
      }
    }
  },
  "composerJson": {
    "require": {
      "lotsof/types": "^1.0"
    }
  }
}
