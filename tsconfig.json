{
  "exclude": ["./dist/**/*", "./vendor/**/*"],
  "compilerOptions": {
    "noImplicitAny": false,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "module": "nodenext",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext"
  }
}
